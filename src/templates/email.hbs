<body>
  
<h2 class=" font-family: Arial, sans-serif;">Hola soy {{customer.nombres}}</h2>
<p class=" font-family: Arial, sans-serif;">mi telefono de contacto es {{customer.celular}}</p>
<p class=" font-family: Arial, sans-serif;">mi correo electronico es {{customer.correo}}</p>

  <div class="cart font-family: Arial, sans-serif;">
    {{#each carrito}}
    <div class="item">
      <img src="{{this.img}}" />
      <div class="details">
        <h3>{{this.nombre}}</h3>
        <p>Precio: {{this.precio}}</p>
        <p>Cantidad: {{this.unidad}}</p>
      </div>
    </div>
    {{/each}}
    <div class="flex justify-between">
      <p class="font-bold text-3xl">Total:</p>
      <p class="text-blue-700 font-bold text-3xl">S/{{total}}</p>   
    </div>
  </div>
</body>

